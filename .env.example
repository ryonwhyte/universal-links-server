# Server
PORT=3000
NODE_ENV=development

# Database
DATABASE_PATH=./data/database.sqlite

# Session (generate a random string for production)
SESSION_SECRET=change-this-to-a-random-string-in-production

# Initial admin credentials (used on first run only)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme

# Trust proxy (set to true if behind reverse proxy like nginx)
TRUST_PROXY=false

# Cleanup endpoint authentication (required for /api/cleanup)
CLEANUP_KEY=your-cleanup-secret-key

# API Key for referral endpoints (optional - if not set, endpoints are public)
# Generate with: openssl rand -hex 32
API_KEY=
